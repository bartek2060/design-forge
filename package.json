{
    "name": "@mogielski/design-forge",
    "version": "0.0.11",
    "description": "Type-safe design system generator with SCSS and TypeScript support",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./cli/*": {
            "import": "./dist/cli/*.js"
        }
    },
    "bin": {
        "design-forge": "./dist/cli/index.js"
    },
    "files": [
        "dist/**/*",
        "static"
    ],
    "scripts": {
        "build": "tsc && node build.js",
        "prepare": "npm run build",
        "prepublishOnly": "npm run build",
        "test": "node --test",
        "test:build": "npm run build && node ./dist/cli/index.js init"
    },
    "dependencies": {
        "commander": "^11.0.0",
        "inquirer": "^8.2.5",
        "prettier": "^3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.0"
    },
    "devDependencies": {
        "esbuild": "^0.20.0"
    }
}
