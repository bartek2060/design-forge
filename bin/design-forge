#!/usr/bin/env node

const path = require('path');
const { spawn } = require('child_process');

const cliPath = path.join(__dirname, '../src/cli/index.ts');

// Forward all command line arguments after the script name
const args = process.argv.slice(2);
const tsNode = spawn('npx', ['ts-node', cliPath, ...args], {
  stdio: 'inherit',
  shell: true
});

tsNode.on('error', (err) => {
  console.error('Failed to start ts-node:', err);
  process.exit(1);
});

tsNode.on('exit', (code) => {
  process.exit(code || 0);
});
