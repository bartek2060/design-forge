{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/static/**", "src/**/static/**", "src/cli/commands/build/static/**"]
}
